[Unit]
Description=MCGG API (Express)
After=network.target

[Service]
Type=simple
WorkingDirectory=/var/www/mcgg
ExecStart=/usr/bin/node /var/www/mcgg/server/index.js
Restart=always
RestartSec=5
Environment=NODE_ENV=production
EnvironmentFile=/var/www/mcgg/.env
User=www-data
Group=www-data

[Install]
WantedBy=multi-user.target
